ALGORITMO CalculadoraBasica
VAR
    opc: INTEIRO
    a, b: REAL (para operações com ponto flutuante)
    ai, bi: INTEIRO LONGO (para a operação de módulo)

FUNÇÃO menu()
    EXIBIR "=== Calculadora Básica ==="
    EXIBIR "1) Soma"
    EXIBIR "2) Subtracao"
    EXIBIR "3) Multiplicacao"
    EXIBIR "4) Divisao"
    EXIBIR "5) Resto (modulo) - inteiros"
    EXIBIR "6) Potencia (x^y)"
    EXIBIR "7) Limpar tela"
    EXIBIR "0) Sair"
    EXIBIR "Escolha uma opcao: "
FIM FUNÇÃO

INICIO
    REPITA
        CHAMAR menu()
        LER opc

        // Limpeza de buffer para entrada inválida na opção
        SE (LEITURA opc FALHAR) ENTÃO
            LIMPAR BUFFER DE ENTRADA
            EXIBIR "Entrada invalida. Tente novamente."
            CONTINUAR PARA PRÓXIMA REPETIÇÃO DO LOOP
        FIM SE

        CASO opc SEJA
            CASO 1: // Soma
                EXIBIR "Digite dois numeros: "
                SE (LER a E b SUCEDER) ENTÃO
                    EXIBIR "Resultado: ", a + b
                SENÃO
                    EXIBIR "Entrada invalida."
                FIM SE

            CASO 2: // Subtração
                EXIBIR "Digite dois numeros: "
                SE (LER a E b SUCEDER) ENTÃO
                    EXIBIR "Resultado: ", a - b
                SENÃO
                    EXIBIR "Entrada invalida."
                FIM SE

            CASO 3: // Multiplicação
                EXIBIR "Digite dois numeros: "
                SE (LER a E b SUCEDER) ENTÃO
                    EXIBIR "Resultado: ", a * b
                SENÃO
                    EXIBIR "Entrada invalida."
                FIM SE

            CASO 4: // Divisão
                EXIBIR "Digite dois numeros (dividendo divisor): "
                SE (LER a E b SUCEDER) ENTÃO
                    SE (b IGUAL A 0) ENTÃO
                        EXIBIR "Erro: divisao por zero!"
                    SENÃO
                        EXIBIR "Resultado: ", a / b
                    FIM SE
                SENÃO
                    EXIBIR "Entrada invalida."
                FIM SE

            CASO 5: // Resto (Módulo)
                EXIBIR "Digite dois inteiros: "
                SE (LER ai E bi SUCEDER) ENTÃO
                    SE (bi IGUAL A 0) ENTÃO
                        EXIBIR "Erro: divisao por zero!"
                    SENÃO
                        EXIBIR "Resultado: ", ai MOD bi
                    FIM SE
                SENÃO
                    EXIBIR "Entrada invalida. Use inteiros para modulo."
                FIM SE

            CASO 6: // Potência
                EXIBIR "Digite base e expoente: "
                SE (LER a E b SUCEDER) ENTÃO
                    RES = POTENCIA(a, b) // Função pow()
                    EXIBIR "Resultado: ", RES
                SENÃO
                    EXIBIR "Entrada invalida."
                FIM SE

            CASO 7: // Limpar tela
                EXECUTAR COMANDO DE LIMPEZA DE TELA (cls ou clear)

            CASO 0: // Sair
                EXIBIR "Saindo..."

            OUTRO CASO:
                EXIBIR "Opcao invalida. Tente novamente."

        FIM CASO

        // Limpeza de buffer de entrada após a operação
        LIMPAR BUFFER DE ENTRADA ATÉ O FINAL DA LINHA

    ENQUANTO (opc DIFERENTE DE 0)

FIM
