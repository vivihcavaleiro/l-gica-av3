#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int numero_secreto, palpite, tentativas = 0, limite_inferior = 1, limite_superior = 100;
    
    srand(time(0));
    
    numero_secreto = (rand() % limite_superior) + 1;
    
    printf("Jogo de AdivinhaÃ§Ã£o!\n");
    printf("Escolhi um nÃºmero entre %d e %d. Adivinhe qual Ã©.\n", limite_inferior, limite_superior);

    do {
        printf("\nQual Ã© o nÃºmero: ");
        
        if (scanf("%d", &palpite) != 1) {
            printf("Entrada invÃ¡lida! Por favor, digite apenas nÃºmeros.\n");
            while (getchar() != '\n');
            continue;
        }
        
        tentativas++;
        
        if (palpite < numero_secreto) {
            printf("digite um numero maior.\n");
        } else if (palpite > numero_secreto) {
            printf("digite um numero menor.\n");
        } else {
            printf("\nğŸ‰ ParabÃ©ns! VocÃª acertou (%d) em %d tentativas!\n", numero_secreto, tentativas);
        }
        
    } while (palpite != numero_secreto);

    return 0;
}
